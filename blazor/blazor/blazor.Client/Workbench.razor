@page "/"
@rendermode InteractiveWebAssembly
@inject HttpClient httpClient
@using Newtonsoft.Json
@using System.Net.Http.Headers
<FileEdit Changed="OnChanged" Ended="onEnded"/>
@code {

    string fileContent;

    async Task OnChanged(FileChangedEventArgs e)
    {
        try
        {
            foreach (var file in e.Files)
            {
                // A stream is going to be the destination stream we're writing to.
                using (var stream = new MemoryStream())
                {
                    // Here we're telling the FileEdit where to write the upload result
                    await file.WriteToStreamAsync(stream);

                    var content = new MultipartFormDataContent();
                    content.Headers.ContentDisposition = new ContentDispositionHeaderValue("form-data");
                    content.Add(new StreamContent(stream, Convert.ToInt32(stream.Length)), "image", file.Name);

                    await httpClient.PostAsync("http://185.185.71.248:13845/track", content);
                    /*
                    // Once we reach this line it means the file is fully uploaded.
                    // In this case we're going to offset to the beginning of file
                    // so we can read it.
                    stream.Seek(0, SeekOrigin.Begin);

                    // Use the stream reader to read the content of uploaded file,
                    // in this case we can assume it is a textual file.

                    using (var reader = new StreamReader(stream))
                    {
                        fileContent = await reader.ReadToEndAsync();
                        Console.WriteLine(fileContent);

                       
                    }
                    */
                }
            }
        }
        catch (Exception exc)
        {
            Console.WriteLine(exc.Message);
        }
        finally
        {
            this.StateHasChanged();
        }

    }

    async Task onEnded(FileEndedEventArgs e)
    {
        Console.WriteLine($"File: {e.File.Name}");
        
    }
}